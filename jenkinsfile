pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', credentialsId: 'GitHub-cred', url: 'https://github.com/Anvisys/docker-api.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh "\"${tool 'NET-6.0'}/dotnet\" build ./docker-api/docker-api.csproj /p:Configuration=Release /p:Platform=\"Any CPU\" /p:ProductVersion=1.0.0.${env.BUILD_NUMBER}"
                echo 'Buil succedded'
            }
        }
        stage('Build Library') {
            steps {
                echo 'Building..'
                sh "\"${tool 'NET-6.0'}/dotnet\" build ./Common/Common.csproj /p:Configuration=Release /p:Platform=\"Any CPU\" /p:ProductVersion=1.0.0.${env.BUILD_NUMBER}"
                echo 'Buil succedded'
            }
        }
        stage('check Docker') {
            steps {
                echo 'checking Docker....'
                sh """ docker ps -a"""
                //sh "\"${tool 'MyDocker'}/bin\" docker ps -a"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                 script {
                    withDockerRegistry(credentialsId: 'DockerHub-cred', url: 'https://index.docker.io/') {
                       sh """ docker build -t amitbansal73/docker-api:demo3 . """
		               sh """ docker push amitbansal73/docker-api:demo3 """

                    }
                 }
                }
        }

    }
}